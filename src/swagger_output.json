    "/user/signup": {
      "post": {
        "description": "signup user + verify user opt send on mail",
        "tags": ["USER MICROSERVICES"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "John Smith"
                },
                "email": {
                  "example": "john@gmail.com"
                },
                "password": {
                  "example": "john@123"
                },
                "phone_no": {
                  "example": "9999054321"
                }
              }
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/owner/signup": {
      "post": {
        "tags": ["USER MICROSERVICES"],
