{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "HOUSING APP API",
    "description": "Housing app using the microservices. this api gateway all microservices like users , property & chat "
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
